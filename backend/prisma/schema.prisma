generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id    Int     @id @default(autoincrement())
  playerA  String
  playerB  String
  createdAt DateTime @default(now())
}

model Ship {
  id    Int     @id @default(autoincrement())
  name  String
  length  Int
  createdAt DateTime @default(now())
}